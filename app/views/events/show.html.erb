<div class="container">

  <h1 class="page-header"><strong>Event Details</strong></h1>

  <div class="row">
    <div class="col-sm-8 ">
      <%= render "event_details" %>
      <h2 class="page-header"> <strong>Tickets bought on this Event</strong></h2>
      <%= render "tickets_list", tickets: Ticket.where(event_id: @event.id) %>
    </div>

    <div class="col-sm-4 panel panel-default">
      <h2 class="page-header text-center"> <strong>Buy ticket</strong> </h2>
      <% if user_signed_in? %>
        <%= render "new_ticket", ticket: Ticket.new( :event_id=>@event.id) %>
      <% else %>
        <h3 class="text-center"> U need to be logged in to buy ticket</h3>
      <% end %>

    </div>

  </div>

  <%= link_to 'Go Back', events_path, class:'btn btn-default' %>
  <%= link_to 'Edit', edit_event_path(@event), class:'btn btn-default' %>
</div>
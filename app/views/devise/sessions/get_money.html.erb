<div class="container">
  <h2 class="page-header">Get Money</h2>
  <div class="row">
    <div class="col-sm-4">
      <%= form_with(model: @user, local: true) do |f| %>

        <div class="field">
          <%= f.label :money %> <%= current_user.money %> $
          <%= f.text_field :money, class:'form-control' %>
        </div>


        <%= f.submit 'Add', :class => 'btn btn-default' %>

      <% end %>

    </div>
  </div>
  <%= link_to "Back", :back, class:'btn btn-default' %>
</div>